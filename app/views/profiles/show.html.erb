<div class="container flex flex-col mt-10 mx-auto" data-controller="clipboard">
  <div class="flex relative justify-between">
    <div class="flex flex-col mb-5">
      <%= image_tag user_avatar(current_user, 80), class: 'w-20 h-20 rounded-full ring-2 ring-blue-500', alt: "Avatar of #{current_user.full_name}" %>
      <div>
        <p class="mt-2 text-black dark:text-gray-200 font-bold text-2xl overflow-hidden overflow-ellipsis">
          <%= current_user.first_name if current_user.first_name %>
          <%= current_user.last_name if current_user.last_name %>
        </p>
        <p class="mt-2 text-black dark:text-gray-200 font-bold text-2xl overflow-hidden overflow-ellipsis">
          <%= current_user.email if !current_user.first_name || !current_user.last_name %>
        </p>
        <span class="bg-blue-500 text-white text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 truncate"><%= current_user.role.capitalize %></span>
      </div>
      <div>
        <h2 class="text-black dark:text-gray-200 font-bold">Bio</h2>
        <p class="mt-2 text-black dark:text-gray-200"><%= @profile.bio %></p>
      </div>
    </div>
    <div id="contact-details" data-clipboard-target="contactDetails" class="flex flex-grow-0 flex-col gap-6">
      <div>
        <h2 class="text-black dark:text-gray-200 font-bold">Email:</h2>
        <p class="text-black dark:text-gray-200"><%= current_user.email %></p>
      </div>
      <div>
        <h2 class="text-black dark:text-gray-200 font-bold">Date of Birth:</h2>
        <p class="text-black dark:text-gray-200"><%= @profile.date_of_birth.strftime("%B %d, %Y") %></p>
      </div>
      <div>
        <h2 class="text-black dark:text-gray-200 font-bold">Phone:</h2>
        <p class="text-black dark:text-gray-200"><%= @profile.phone_number %></p>
      </div>
      <div>
        <h2 class="text-black dark:text-gray-200 font-bold">Address:</h2>
        <p class="text-black dark:text-gray-200">
          <%= @profile.street_address %>,
          <%= @profile.city %>,
          <%= @profile.state %>,
          <%= @profile.zip_code %>
        </p>
      </div>
    </div>
    <button data-action='click->clipboard#copy' class="absolute end-2 top-2 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg p-2 inline-flex items-center justify-center group hover-target">
      <span id="default-icon" data-clipboard-target="defaultIcon">
        <svg class="w-3.5 h-3.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
          <path d="M16 1h-3.278A1.992 1.992 0 0 0 11 0H7a1.993 1.993 0 0 0-1.722 1H2a2 2 0 0 0-2 2v15a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2Zm-3 14H5a1 1 0 0 1 0-2h8a1 1 0 0 1 0 2Zm0-4H5a1 1 0 0 1 0-2h8a1 1 0 1 1 0 2Zm0-5H5a1 1 0 0 1 0-2h2V2h4v2h2a1 1 0 1 1 0 2Z"/>
        </svg>
      </span>
      <span id="success-icon" class="hidden" data-clipboard-target="successIcon">
        <svg class="w-3.5 h-3.5 text-blue-700 dark:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
        </svg>
      </span>
      <div role="tooltip" class="absolute hidden group-hover:inline-block group-hover:opacity-100 z-10 px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700 -translate-y-[calc(100%+0.5rem)] transform -translate-x-1/2 left-1/2">
        <span id="default-tooltip-message" data-clipboard-target="defaultTooltip">Copy</span>
        <span id="success-tooltip-message" class="hidden" data-clipboard-target="successTooltip">Copied!</span>
        <div class="tooltip-arrow absolute bg-gray-900 dark:bg-gray-700 -bottom-1.5 w-3 h-3 transform rotate-45 -translate-x-1/2 left-1/2"></div>
      </div>
    </button>
  </div>
  <div class='w-full'>
    <%= link_to "Edit this profile", edit_user_profile_path(@profile), class: "mt-2 py-3 px-5 bg-blue-500 text-white rounded-lg inline-block font-medium" %>
    <%= link_to "Home", root_path, class: "mt-2 py-3 px-5 bg-blue-500 text-white rounded-lg inline-block font-medium" %>
  </div>
</div>
