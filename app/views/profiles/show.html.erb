<div class="mx-auto md:w-2/3 w-full flex mt-10">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @profile %>
    <div class="flex gap-x-8">
      <div class="w-3/4">
        <div class="flex flex-wrap mb-5">
          <%= image_tag user_avatar(current_user, 80), class: 'w-20 h-20 rounded-full ring-2 ring-blue-500 mr-5', alt: "Avatar of #{current_user.full_name}" %>
          <div>
            <p class="mt-2 text-black dark:text-gray-200 font-bold text-2xl" >
              <%= current_user.first_name if current_user.first_name %>
              <%= current_user.last_name if current_user.last_name %>
            </p>
            <p class="mt-2 text-black dark:text-gray-200 font-bold text-2xl text-wrap" >
              <%= current_user.email if !current_user.first_name || !current_user.last_name %>
            </p>
            <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400"><%= current_user.role.capitalize %></span>
          </div>
        </div>
        <div>
          <h2 class="text-black dark:text-gray-200 font-bold">
            Bio
          </h2>
          <p class="mt-2 text-black dark:text-gray-200" >
            <%= @profile.bio %>
          </p>
        </div>
        <%= link_to "Edit this profile", edit_user_profile_path(@profile), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Home", root_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </div>
      <div class="flex-grow flex flex-col gap-y-2">
        <h2 class="text-black dark:text-gray-200 font-bold">
          Date of Birth:
        </h2>
        <p class="text-black dark:text-gray-200" >
          <%= @profile.date_of_birth.strftime("%B %d, %Y") %>
        </p>
        <h2 class="text-black dark:text-gray-200 font-bold">
          Phone:
        </h2>
        <p class="text-black dark:text-gray-200" >
          <%= @profile.phone_number %>
        </p>
        <h2 class="text-black dark:text-gray-200 font-bold">
          Address:
        </h2>
        <p class="text-black dark:text-gray-200 text-wrap" >
          <%= @profile.street_address %>,
          <%= @profile.city %>,
          <%= @profile.state %>,
          <%= @profile.zip_code %>
        </p>
      </div>
    </div>
  </div>
</div>
