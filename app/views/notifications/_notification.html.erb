<li id="notification-<%= notification&.id %>-<%= context %>"
    class="flex py-3 px-4 border-b hover:bg-gray-100 dark:hover:bg-gray-600 dark:border-gray-600 list-none
     <%= notification.read? ? '' : 'bg-blue-100' %>">
  <%= link_to notification_path(notification), data: { turbo_frame: '_top' }, class: 'w-full' do %>
    <div class="flex-shrink-0">
      <%= image_tag user_avatar(notification.from, size: 44), class: 'w-11 h-11 rounded-full', alt: notification&.from&.email %>
      <div class="flex absolute justify-center items-center ml-6 -mt-5 w-5 h-5 bg-gray-900 rounded-full border border-white dark:border-gray-700">
        <svg class="w-2 h-2 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18"><path d="M6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Zm11-3h-2V5a1 1 0 0 0-2 0v2h-2a1 1 0 1 0 0 2h2v2a1 1 0 0 0 2 0V9h2a1 1 0 1 0 0-2Z"/></svg>
      </div>
    </div>
    <div class="pl-3 w-full">
      <div class="text-gray-500 font-normal text-sm mb-1.5 dark:text-gray-400">
        <%= notification.message if notification.message %>
        from
        <span class="font-semibold text-gray-900 dark:text-white">
          <%=notification&.from&.email %>
        </span>
      </div>
      <div class="text-xs font-medium text-primary-700 dark:text-primary-400">
        <%= time_ago_in_words(notification.created_at) %> ago
      </div>
    </div>
  <% end %>
  <div class='flex flex-col flex-1 justify-center items-center'>
    <%= button_to 'READ', mark_as_read_path(notification), method: :patch %>
    <%= button_to 'UNREAD', mark_as_unread_path(notification), method: :patch %>
  </div>
</li>
